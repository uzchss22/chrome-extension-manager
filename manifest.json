{
  "manifest_version": 3,
  "name": "Extension Manager",
  "version": "1.0",
  "description": "Manage your Chrome extensions comfortably by enabling and disabling them with ease.",
  "permissions": [
    "management",
    "commands"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+M",
        "mac": "Alt+M"
      },
      "description": "Toggle extensions"
    }
  }
}
